<h1>Authors</h1>
<%= link_to 'New Author', new_author_path %>
<br><br>
<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
        <th></th>
    </tr>

    <% @authors.each do |author| %>
        <tr>
            <td><%= author.name %></td>
            <td><%= author.homepage %></td>
            <td><%= link_to 'Show', author_path(author) %></td>
            <td><%= link_to 'Edit', edit_author_path(author) %></td>
            <td><%= link_to 'Delete', author_path(author), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>
<br>
<%= link_to "Back Home", root_path %>