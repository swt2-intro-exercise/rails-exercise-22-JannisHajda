<h1>New author</h1>

<% if @author.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@author.errors.count, "error") %> prohibited this article from being saved:</h2>
    
        <ul>
        <% @author.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= form_with scope: :author, url: authors_path, local: true do |form| %>
    <div class="field">
        <%= form.label :first_name %>
        <br>
        <%= form.text_field :first_name %>
    </div>
    <div class="field">
        <%= form.label :last_name %>
        <br>
        <%= form.text_field :last_name %>
    </div>
    <div class="field">
        <%= form.label :homepage %>
        <br>
        <%= form.text_field :homepage %>
    </div>
    <div class="field">
        Paper
        <br>
        <%= form.select 'paper_ids', options_from_collection_for_select(Paper.all, :id, :title, @author.paper_ids), {}, multiple: true, size: 10 %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>