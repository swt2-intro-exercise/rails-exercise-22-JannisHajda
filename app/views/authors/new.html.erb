<h1>New Author</h1>
<%= form_with scope: :author, url: authors_path, local: true do |form| %>
    <div class="field">
        <%= form.label :first_name %>
        <br>
        <%= form.text_field :first_name %>
    </div>
    <div class="field">
        <%= form.label :last_name %>
        <br>
        <%= form.text_field :last_name %>
    </div>
    <div class="field">
        <%= form.label :homepage %>
        <br>
        <%= form.text_field :homepage %>
    </div>
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>