<h1>Paper</h1>
<%= link_to 'New paper', new_paper_path %>
<br><br>
<table>
    <tr>
        <th>Title</th>
        <th>Venue</th>
        <th>Year</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    <% @papers.each do |paper| %>
        <tr>
            <td><%= paper.title %></td>
            <td><%= paper.venue %></td>
            <td><%= paper.year %></td>
            <td><%= link_to 'Show', paper_path(paper) %></td>
            <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
            <td><%= link_to 'Delete', paper_path(paper), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>
<br>
<%= link_to "Back Home", root_path %>