<h1>New Paper</h1>

<% if @paper.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@paper.errors.count, "error") %> prohibited this article from being saved:</h2>
    
        <ul>
        <% @paper.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= form_with scope: :paper, url: papers_path, local: true do |form| %>
    <div class="field">
        <%= form.label :title %>
        <br>
        <%= form.text_field :title %>
    </div>
    <div class="field">
        <%= form.label :venue %>
        <br>
        <%= form.text_field :venue %>
    </div>
    <div class="field">
        <%= form.label :year %>
        <br>
        <%= form.number_field :year %>
    </div>
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>

<div>
    <%= link_to "Back to papers", papers_path %>
</div>